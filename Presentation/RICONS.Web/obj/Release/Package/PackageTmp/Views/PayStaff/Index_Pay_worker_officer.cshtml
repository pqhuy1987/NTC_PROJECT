    function renderDate() {
        var html = '';
        html += '<tr>';
        html += '<th class="ovh col1"><input type="checkbox" onclick="Select(this);" class="chkCheck"/></th>'
            + '<th class="ovh col2">Stt</th>'
            + '<th class="ovh col10">Trình trạng</th>'
