@{
    ViewBag.Title = "Hồ sơ cá nhân";
}
@model RICONS.Web.Models.TaiKhoanModels
@*--css--*@
@section CSS
{
    <link rel="stylesheet" type="text/css" href="@Url.Content("~")themes/RICONS-2015/css/controller/Account.PersonalCSS.css" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~")themes/RICONS-2015/css/chosen/chosen.css" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~")themes/RICONS-2015/css/chosen/prism.css" />
}

@*--javascript--*@
@section JavaScript
{
    <script type="text/javascript" src="@Url.Content("~")themes/RICONS-2015/js/controllers/Account.PersonalJS.js"></script>
    <script type="text/javascript" src="@Url.Content("~")themes/RICONS-2015/js/chosen/chosen.jquery.js"></script>
    <script type="text/javascript" src="@Url.Content("~")themes/RICONS-2015/js/chosen/prism.js"></script>
    <script type="text/javascript" src="@Url.Content("~")themes/RICONS-2015/js/table/buildTable.js"></script>
    <script type="text/javascript" src="@Url.Content("~")themes/RICONS-2015/js/colResizale/colResizable-1.3.source.js"></script>
}
<div class="HeaderFixed">
    <div class="b-b b-light">
        <div class="p-left c-black">Thông tin cá nhân</div>
        <div class="clearBoth"></div>
    </div>
</div>
@if (Model != null)
{
    <div class="boxEdit">
        @using (Html.BeginForm("Personal", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
        {
            string gioiTinhNam = "";
            string gioiTinhNu = "";
            if (Model.gioitinh == "1")
            {
                gioiTinhNam = "selected=selected";
            }
            else
            {
                gioiTinhNu = "selected=selected";
            }
            <table>
                <tr>
                    <td>Mã nhân sự</td>
                    <td>@Model.manhansu</td>
                </tr>
                <tr>
                    <td>Tên đăng nhập</td>
                    <td>@Model.tendangnhap</td>
                </tr>
                <tr>
                    <td>Thư điện tử</td>
                    <td><input type="text" name="thudientu" value="@Model.thudientu" autocomplete="off" /></td>
                </tr>
                <tr>
                    <td>Họ tên</td>
                    <td><input type="text" name="hoten" value="@Model.hoten" autocomplete="off" /></td>
                </tr>
                <tr>
                    <td>Giới tính</td>
                    <td><select name="gioitinh"><option value="1" @gioiTinhNam>Nam</option><option value="0" @gioiTinhNu >Nữ</option></select></td>
                </tr>
                <tr>
                    <td>Địa chỉ</td>
                    <td><input type="text" name="diachi" value="@Model.diachi" autocomplete="off" /></td>
                </tr>
                <tr>
                    <td>Số điện thoại</td>
                    <td><input type="text" name="sodienthoai" value="@Model.sodienthoai" autocomplete="off" /></td>
                </tr>
                <tr>
                    <td></td>
                    <td><input type="submit" class="buttoncustom WhiteButton" value="Lưu"/></td>
                </tr>
            </table>
        }
    </div>
}