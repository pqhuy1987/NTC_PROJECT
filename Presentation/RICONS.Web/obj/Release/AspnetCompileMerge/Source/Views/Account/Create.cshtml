@model RICONS.Web.Models.PhongBanModels
@{
    ViewBag.Title = "Tạo tài khoản người dùng";
}
@*--css--*@
@section CSS
{
    <link rel="stylesheet" type="text/css" href="@Url.Content("~")themes/RICONS-2015/css/controller/AccountCSS.CreateOrEdit.css" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~")themes/RICONS-2015/css/chosen/chosen.css" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~")themes/RICONS-2015/css/chosen/prism.css" />
}

@*--javascript--*@
@section JavaScript
{
<script type="text/javascript" src="@Url.Content("~")themes/RICONS-2015/js/jquery-ui-1.10.0.custom.min.js"></script>
    <script type="text/javascript" src="@Url.Content("~")themes/RICONS-2015/js/controllers/AccountJS.CreateOrEdit.js"></script>
<script type="text/javascript" src="@Url.Content("~")themes/RICONS-2015/js/jquery.datepick-vi.js"></script>
    <script type="text/javascript" src="@Url.Content("~")themes/RICONS-2015/js/chosen/chosen.jquery.js"></script>
    <script type="text/javascript" src="@Url.Content("~")themes/RICONS-2015/js/chosen/prism.js"></script>
    <script type="text/javascript" src="@Url.Content("~")themes/RICONS-2015/js/table/buildTable.js"></script>
    <script type="text/javascript" src="@Url.Content("~")themes/RICONS-2015/js/colResizale/colResizable-1.3.source.js"></script>

}
<script>
    var linkContent = '@Url.Content("~")';
</script>

<div class="HeaderFixed1">
    <div class="p-left1 b-b">Thêm mới người dùng</div>
        <div class="clearBoth"></div>
</div>

<div class="boxEdit">
   @using (Html.BeginForm("Create", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
    {
        <table>

            <tr>
                <td>Tên đăng nhập:</td>
                <td><input type="text" style="width:250px" autocomplete="off" placeholder="Tên đăng nhập" name="tendangnhap" /></td>
                <td style="width:150px; text-align:right; padding-right:7px">Mật khẩu:</td>
                <td><input type="text" style="width:250px" autocomplete="off" placeholder="Tên đăng nhập" name="tendangnhap" /></td>
            </tr>

            <tr>
                <td>Họ và tên:</td>
                <td><input type="text" style="width:250px" autocomplete="off" placeholder="Họ và tên" name="hoten" /></td>

                <td style="width:150px; text-align:right; padding-right:7px">Thư điện tử:</td>
                <td><input type="text" style="width:250px" autocomplete="off" placeholder="Địa chỉ mail" name="thudientu" /></td>
            </tr>

            <tr>
                <td>Điện thoại:</td>
                <td><input type="text" style="width:250px" autocomplete="off" placeholder="Số điện thoại" name="sodienthoai" /></td>

                <td style="width:150px; text-align:right; padding-right:7px">Địa chỉ hiện nay:</td>
                <td><input type="text" style="width:250px" autocomplete="off" placeholder="Địa chỉ hiện nay" name="diachi" /></td>
            </tr>

            <tr>
                <td style="width:150px; text-align:right; padding-right:7px">Chức vụ:</td>
                <td>
                    <select id="filter01" data-placeholder="Chức vụ" class="chosen-select-kehoach" name="machucdanh">
                        <option value="0">Chọn chức vụ</option>
                        @if (!string.IsNullOrEmpty(ViewBag.sbchucvu))
                        {
                            @Html.Raw(ViewBag.sbchucvu);
                        }
                    </select>
                </td>

                <td style="width:150px; text-align:right; padding-right:7px">Phòng ban:</td>
                <td>
                    <select id="filter02" data-placeholder="Phòng ban" class="chosen-select-kehoach" name="maphongban">
                        <option value="0">Chọn phòng ban</option>
                        @if (!string.IsNullOrEmpty(ViewBag.sbphongban))
                        {
                            @Html.Raw(ViewBag.sbphongban);
                        }
                    </select>
                </td>


            </tr>

            <tr>
                <td style="width:150px; text-align:right; padding-right:7px">Ngày đăng ký:</td>
                <td><input type="text" style="width:250px" class="inputShort" id="txtNgayDangKy" name="ngaydangky" /></td>

                <td style="width:150px; text-align:right; padding-right:7px">Đơn vị:</td>
                <td>
                    <select id="filter02" data-placeholder="Đơn vị" class="chosen-select-kehoach" name="madonvi">
                        <option value="0">Chọn đơn vị</option>
                        @if (!string.IsNullOrEmpty(ViewBag.sbphongban))
                        {
                            @Html.Raw(ViewBag.sbphongban);
                        }
                    </select>
                </td>

            </tr>

            <tr>
                <td>Trạng thái:</td>
                <td><label><input type="checkbox" id="chkSelectKichhoat" checked="checked" /><span id="spKichhoat">Kích hoạt</span></label></td>
            </tr>

            <tr>
                <td style="padding-top:50px;"></td>
                <td>
                    <input id="btn-save" type="submit" class="buttoncustom WhiteButton" name="luu" value="Lưu" />
                    <a href="@Url.Action("Manage", "Account")" class="buttoncustom WhiteButton">Trở về</a>
                </td>
            </tr>

        </table>
    }
</div>
